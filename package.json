{
    "name": "vlocode",
    "displayName": "Vlocode",
    "description": "Vlocity developemtn extension",
    "version": "0.4.0",
    "license": "MIT",
	"icon": "resources/icon.png",
    "author": {
        "name": "Peter van Gulik",
        "email": "peter@curlybracket.nl"
    },
    "publisher": "peter0136",
    "engines": {
        "vscode": "^1.26.0"
    },
    "homepage": "https://github.com/Codeneos/vlocode#readme",
    "categories": [
        "Other"
    ],
    "repository": "github:codeneos/vlocode",
    "bugs": {
        "url": "https://github.com/Codeneos/vlocode/issues",
        "email": "peter@curlybracket.nl"
    },
    "activationEvents": [
        "onCommand:extension.sayHello",
        "workspaceContains:*_datapack.json",
        "workspaceContains:*_DataPack.json",
        "workspaceContains:**/*_datapack.json",
        "workspaceContains:**/*_DataPack.json"
    ],
    "main": "./out/vlocode",
    "contributes": {
        "commands": [
            {
                "command": "vlocity.refreshDatapack",
                "title": "Refresh Selected Datapack(s)",
                "category": "Vlocity"
            },
            {
                "command": "vlocity.deployDatapack",
                "title": "Deploy Selected Datapack(s)",
                "category": "Vlocity"
            },
            {
                "command": "vlocity.viewDatapack.generic",
                "title": "View Selected Datapack",
                "category": "Vlocity"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceFilename =~ /(.*_datapack\\.json)$/i",
                    "command": "vlocity.refreshDatapack",
                    "group": "1_modification"
                },
                {
                    "when": "resourceFilename =~ /(.*_datapack\\.json)$/i",
                    "command": "vlocity.deployDatapack",
                    "group": "1_modification"
                },
                {
                    "when": "resourceFilename =~ /(.*_datapack\\.json)$/i",
                    "command": "vlocity.viewDatapack.generic",
                    "group": "1_modification"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Vlocity",
            "properties": {
                "vlocity.verbose": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "Enable verbose loging to the output window"
                },
                "vlocity.sfdxUsername": {
                    "type": "string",
                    "markdownDescription": "SFDX username; when this is specified the username, password, loginUrl and instanceUrl are ignored."
                },
                "vlocity.username": {
                    "type": "string",
                    "markdownDescription": "SalseForce username"
                },
                "vlocity.password": {
                    "type": "string",
                    "markdownDescription": "SalseForce account password appended with your Salesforce security token"
                },
                "vlocity.loginUrl": {
                    "type": "string",
                    "pattern": "(^http(s){0,1}:\\/\\/[^/]+\\.[a-z]+(:[0-9]+|)$)|(^\\s*$)",
                    "markdownDescription": "Login URL for salesforce, i.e: <https://test.salesforce.com>"
                },
                "vlocity.instanceUrl": {
                    "type": "string",
                    "pattern": "(^http(s){0,1}:\\/\\/[^/]+\\.[a-z]+(:[0-9]+|)$)|(^\\s*$)",
                    "markdownDescription": "Instance URL for salesforce, i.e: <https://test.salesforce.com>"
                },
                "vlocity.httpProxy": {
                    "type": "string",
                    "description": "Optional HTTP proxy for connecting to Salesforce"
                },
                "vlocity.projectPath": {
                    "type": "string",
                    "markdownDescription": "Path to the folder comtaining the Vlocity datapacks relative to the workspace's root folder, for example:\n - `./vlocity`\n - `./datapacks`"
                }
            }
        }
    },
    "scripts": {
        "compile": "npm run compile:extension",
        "compile:extension": "webpack",
        "compile:tests": "tsc -p ./",
        "clean": "rimraf ./out",
        "watch": "webpack --watch",
        "start": "webpack-dev-server --config-name views",
        "test": "npm run compile:tests && node ./node_modules/vscode/bin/test",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "vscode:prepublish": "npm-run-all clean compile",
        "package": "modclean -r -n default:safe,default:caution && vsce package"
    },
    "devDependencies": {
        "@types/angular": "^1.6.51",
        "@types/chai": "^4.1.7",
        "@types/mocha": "^2.2.48",
        "@types/node": "^8.10.36",
        "@types/sinon": "^5.0.5",
        "ajv": "^6.5.4",
        "angular": "^1.7.5",
        "awesome-typescript-loader": "^5.2.1",
        "chai": "^4.2.0",
        "cpx": "^1.5.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "mock-fs": "^4.7.0",
        "modclean": "^3.0.0-beta.1",
        "npm-run-all": "^4.1.3",
        "raw-loader": "^0.5.1",
        "rimraf": "^2.6.2",
        "rxjs": "^6.3.3",
        "sinon": "^7.1.0",
        "tslint": "^5.8.0",
        "typescript": "^3.1.3",
        "vscode": "^1.1.21",
        "vscode-languageclient": "^5.1.1",
        "webpack": "^4.23.1",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10",
        "webpack-glob-entry": "^2.1.1",
        "webpack-merge": "^4.1.4",
        "zone.js": "^0.8.26"
    },
    "dependencies": {
        "jsforce": "^1.9.1",
        "salesforce-alm": "^44.5.0",
        "vlocity": "^1.7.7"
    }
}
