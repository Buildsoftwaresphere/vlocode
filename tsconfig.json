{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "outDir": "out",
        "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown", "DOM"],
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": true, 
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": false, 
        "suppressExcessPropertyErrors": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "@constants": ["constants"],
            "@util": ["lib/util"],
            "@lib": ["lib"],
            "@logging": ["lib/logging"]
        },
        "typeRoots": []
    },
    "include": [
        "src",
        "types",
        "webpack.*.ts",
        "build"
    ]
}