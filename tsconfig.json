{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "outDir": "out",
        "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
        "sourceMap": true,
        "strict": false, 
        "resolveJsonModule": true,
        "noUnusedLocals": false, 
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "@constants": ["constants"],
            "@util": ["lib/util"],
            "@lib": ["lib"],
            "@logging": ["lib/logging"]
        },
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}