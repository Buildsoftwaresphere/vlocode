{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            "es2017",
            "dom"
        ],
        "sourceMap": true,
        "rootDir": "src", 
        "strict": false, 
        "noUnusedLocals": false, 
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "@angular/*": ["node_modules/@angular/*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}