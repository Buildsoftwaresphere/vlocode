{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "outDir": "out",
        "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown", "es2021.string", "DOM"],
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": true, 
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": false, 
        "suppressExcessPropertyErrors": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@root/*": ["src/*"],
            "@constants": ["src/constants"],
            "@util/*": ["src/lib/util/*"],
            "@lib/*": ["src/lib/*"],
            "@logging/*": ["src/lib/logging/*"],
            "@events/*": ["src/events/*"],
            "@commands/*": ["src/commands/*"],
            "@vlocode/*": ["packages/*"]
        },
        "types": [
            "node",
            "webpack-env"
        ]
    },
    "include": [
        "src",
        "types",
        "webpack.*.ts",
        "build"
    ]
}